<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Employee-Mapper">

	<select id="selectEmployeeById" resultType="employee">
		select *
		from employee
		where employee_id=#{employee_id,jdbcType=VARCHAR}
	</select>
	
		<sql id="search">
		<if test="searchType == 'i'.toString()">
			where employee_id like '%'||#{keyword}||'%'
		</if>
		<if test="searchType == 'n'.toString()">
			where employee_name like '%'||#{keyword}||'%'
		</if>
	</sql>
	
	<select id="selectSearchEmployeeList" parameterType="pageMaker" resultType="employee">
		select *
		from employee
		<include refid="search" />
		order by employee_regdate desc
	</select>
	
	<select id="selectSearchEmployeeListCount" parameterType="pageMaker" resultType="int">
		select count(*)
		from employee
		<include refid="search" />
	</select>
	
	<select id="selectEmployeeList" resultType="employee">
		select * from employee
	</select>
	
	<insert id="insertEmployee" parameterType="employee">
		insert into
		employee(employee_id, employee_pwd, employee_name, employee_phone)
		values(#{employee_id}, #{employee_pwd}, #{employee_name}, #{employee_phone})
	</insert>
	
	<update id="updateEmployee" parameterType="employee">
		update employee
		set
		employee_name=#{employee_name}, employee_id=#{employee_id}, employee_pwd=#{employee_pwd}, employee_phone=#{employee_phone}
		where employee_id=#{employee_id}
	</update>
	
	<delete id="deleteEmployee" parameterType="str">
		delete from employee
		where employee_id=#{employee_id}
	</delete>
	
</mapper>